                       <%= link_to '<button class="btn">Reports</button>'.html_safe %>  

                        <% if user_signed_in? %>
                       <%= current_user.email %>
                      <%= link_to '<button class="btn">Sign out</button>'.html_safe, destroy_user_session_path, :method => :delete %> 
                      <% else %>  
                         <%= link_to '<button class="btn">Sign Up</button>'.html_safe, new_user_registration_path %> 
                     <%= link_to '<button class="btn">Sign in</button>'.html_safe, new_user_session_path %> 
                     <% end %> 

