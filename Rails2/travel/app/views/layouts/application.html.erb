   <head> 
      <meta charset = "utf-8">   
          <title>TravelWise</title>   
            <%= csrf_meta_tags %>  
               <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>   
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>  
       </head> 
       <body>  
        <div id="wrapper">   
        <body style="background-color:#EDEDED;">     <div id="banner">  
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>


           <br>       <h1>      
            <%= image_tag("IconBanner.png", :alt => "logo", size: "60") %>     
              <%= link_to controller: '/welcome' do %>       <%= image_tag("Travel_Logo.png", :alt => "logo", width: "150", height: "50")%>       <% end %>
              
