
<center><h1>Receipts</h1></center>
<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @receipts.each do |receipt| %>
         
         <tr>
            <td><%= receipt.name %></td>
            <td><%= link_to '<button type="button">View</button>'.html_safe, [@tripped, @imageable, receipt] %></td>

            <td><%= link_to "Download receipt", receipt.attachment_url %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
<br><br />