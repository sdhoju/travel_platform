
<h3>Add a Fee</h3><br>
<div style= "padding-left: 8px">
<%= form_for([@trip, @trip.registration_fees.build])  do |f| %>
    

    <%= f.label :type %>
   <%= f.select :name, ["","Conference Fee","Banquet Fee","Dues"], {class: "form-control"} %><br>
    

    <%= f.label :amount %>
    <%= f.text_field :amount %>
<br><br>
    <%= f.submit %>

<% end %>
<br>
<div style="float: left; margin-left: 8px">
<%= link_to '<button type="button">Cancel</button>'.html_safe, trip_registration_fees_path(@trip) %>

</div>