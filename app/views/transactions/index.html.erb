<br>
<center><h1>Daily Expenses</h1>
<h4>Total = $<%= Transaction.sum(:'amount') %></h4></center>

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Category</th>
         <th>Details</th>
         <th>Amount</th>
      </tr>
   </thead>
   
   <tbody>
      <% @trip.transactions.each do |transactions| %>
         
         <tr>
            <td><%= transactions.dcategory.name %></td>
            <td><%= transactions.item %></td>
            <td>$<%= transactions.amount %></td>
            <td> <%= link_to '<button type="button">Delete</button>'.html_safe, [transactions.trip, transactions],
              method: :delete,
              data: { confirm: 'Delete expense?' } %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>

<%= link_to '<button type="button">Back</button>'.html_safe, trip_path(@trip) %>
<%= link_to '<button type="button">Add New Expense</button>'.html_safe, new_trip_transaction_path %>
  