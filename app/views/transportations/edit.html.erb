<h3>Edit Transportation Expense</h3>
<Br>
<%= form_for(@transportation, as: :transportation, url: trip_transportation_path(@trip))  do |f| %>
    
   	<%= f.label :from %>
    <%= f.text_field :from %><br>
    <%= f.label :to %>
    <%= f.text_field :to %><br>
    <%= f.label :mileage %>
    <%= f.text_field :mileage %><br>
    <%= f.label :amount %>
    <%= f.text_field :amount %><br>
    <%= f.label :airfare %>
    <%= f.text_field :airfare %><br>
    <%= f.label :rental_car %>
    <%= f.text_field :rental_car %><br>
    <%= f.label :bus_train %>
    <%= f.text_field :bus_train %><br><br>
    <%= f.submit %>

<% end %>
<div style="float: left; margin-left: 8px">
<%= link_to '<button type="button">Cancel</button>'.html_safe, controller: 'transportations', class: 'button' %></div>