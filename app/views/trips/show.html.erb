


<p ><center><h1>
 <% if @trip.user == current_user %>
  <strong>Place : </strong>
  <%= @trip.place %>

  <strong> Purpose: </strong>
  <%= @trip.purpose %>
  </h1>
</p>

<p><h2>Daily Expenses </h2>
    <%= render @trip.transactions%>
<%= link_to '<button type="button">View transportation </button>'.html_safe, trip_transactions_path(@trip) %><br>
<%= link_to '<button type="button">Add transportation expense</button>'.html_safe, new_trip_transaction_path(@trip) %>
</p>

<p><h2>Transportation</h2>
    <%= render @trip.transportations%>
<%= link_to '<button type="button">View transportation </button>'.html_safe, trip_transportations_path(@trip) %><br>
<%= link_to '<button type="button">Add transportation expense</button>'.html_safe, new_trip_transportation_path(@trip) %>
</p>
<p><h2>Registration fee</h2>
    <%= render @trip.registration_fees %><br />
    <%= link_to '<button type="button">View registration fees </button>'.html_safe, trip_registration_fees_path(@trip) %><br>
    <%= link_to '<button type="button">Add registration fee</button>'.html_safe, new_trip_registration_fee_path(@trip) %>
</p>
<p><h2>Other Expenses</h2>
    <%= render @trip.other_expenses %>
    <%= link_to '<button type="button">View Other Expenses </button>'.html_safe, trip_other_expenses_path(@trip) %><br>
    <%= link_to '<button type="button">Add Other Expenses</button>'.html_safe, new_trip_other_expense_path(@trip) %>
    </p>

<br>


<br><br />


<%= link_to '<button type="button">Edit</button>'.html_safe, edit_trip_path(@trip) %> 
<%= link_to '<button type="button">Delete</button>'.html_safe, trip_path(@trip),
              method: :delete,
              data: { confirm: 'Delete trip?' } %>

 </center><br>
 <%else%>
<strong>Intruder</strong>
<% end %>
<%= link_to '<button type="button">Back</button>'.html_safe, controller: 'trips' %>
